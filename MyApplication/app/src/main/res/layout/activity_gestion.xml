<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gestion">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="64dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/txtViewNombreUser"
            android:layout_width="339dp"
            android:layout_height="62dp"
            android:text="Usuario"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6Gest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="59dp"
            android:text="@string/trabajar"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <Button
            android:id="@+id/btnSucGest"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="171dp"
            android:layout_height="107dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="72dp"
            android:text="@string/sucursales"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6Gest" />

        <Button
            android:id="@+id/btnPrestGest"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="170dp"
            android:layout_height="107dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="30dp"
            android:text="PrÃ©stamos"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6Gest" />

        <Button
            android:id="@+id/btnProdGest"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="168dp"
            android:layout_height="106dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="17dp"
            android:text="@string/productos"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnEmpGest" />

        <Button
            android:id="@+id/btnEmpGest"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="16dp"
            android:text="@string/empleados"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSucGest" />

        <Button
            android:id="@+id/btnCliGest"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="170dp"
            android:layout_height="103dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="30dp"
            android:text="Clientes"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnPrestGest" />

        <ImageButton
            android:id="@+id/btnImagenGest"
            android:layout_width="62dp"
            android:layout_height="53dp"
            android:contentDescription="Ajustes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnVendGest"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="170dp"
            android:layout_height="103dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:text="@string/ventas"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnCliGest" />

        <Button
            android:id="@+id/btnSalirGest"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="139dp"
            android:layout_height="79dp"
            android:layout_marginStart="124dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="148dp"
            android:text="@string/salir"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnProdGest" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
